<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Products</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 20px;
      }

      .container {
        max-width: 1200px;
        margin: 0 auto;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
      }

      .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .header h2 {
        font-size: 2em;
        margin: 0;
      }

      .header-buttons {
        display: flex;
        gap: 15px;
      }

      .btn {
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        font-size: 1em;
      }

      .btn-primary {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid rgba(255, 255, 255, 0.3);
      }

      .btn-primary:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
      }

      .btn-logout {
        background: rgba(239, 83, 80, 0.9);
        color: white;
        border: 2px solid rgba(239, 83, 80, 0.5);
      }

      .btn-logout:hover {
        background: rgba(211, 47, 47, 0.9);
        transform: translateY(-2px);
      }

      .content {
        padding: 30px;
      }

      .stats-bar {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
      }

      .stat-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
      }

      .stat-card h3 {
        font-size: 0.9em;
        opacity: 0.9;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
      }

      .stat-card .value {
        font-size: 2.5em;
        font-weight: bold;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
      }

      thead {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
      }

      th {
        padding: 18px;
        text-align: left;
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.9em;
        letter-spacing: 0.5px;
      }

      td {
        padding: 18px;
        border-bottom: 1px solid #f0f0f0;
        color: #333;
      }

      tr:last-child td {
        border-bottom: none;
      }

      tbody tr {
        transition: all 0.3s;
      }

      tbody tr:hover {
        background: #f8f9fa;
        transform: scale(1.01);
      }

      .product-name {
        font-weight: 600;
        color: #667eea;
      }

      .price {
        font-weight: 600;
        color: #2e7d32;
      }

      .stock {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85em;
        font-weight: 600;
      }

      .stock-good {
        background: #e8f5e9;
        color: #2e7d32;
      }

      .stock-low {
        background: #fff3e0;
        color: #e65100;
      }

      .stock-out {
        background: #ffebee;
        color: #c62828;
      }

      .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #999;
      }

      .empty-state h3 {
        font-size: 1.5em;
        margin-bottom: 15px;
      }

      @media (max-width: 768px) {
        .header {
          flex-direction: column;
          gap: 15px;
          text-align: center;
        }

        .header-buttons {
          flex-direction: column;
          width: 100%;
        }

        .btn {
          width: 100%;
        }

        table {
          font-size: 0.9em;
        }

        th,
        td {
          padding: 12px 8px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h2>My Products</h2>
        <div class="header-buttons">
          <a href="/seller/products/add" class="btn btn-primary"
            >+ Add New Product</a
          >
          <a href="/seller/dashboard" class="btn btn-primary">Dashboard</a>
          <a href="/logout" class="btn btn-logout">Logout</a>
        </div>
      </div>

      <div class="content">
        <div class="stats-bar">
          <div class="stat-card">
            <h3>Total Products</h3>
            <div class="value"><%= products.length %></div>
          </div>
          <div class="stat-card">
            <h3>In Stock</h3>
            <div class="value">
              <%= products.filter(p => p.quantity > 0).length %>
            </div>
          </div>
          <div class="stat-card">
            <h3>Out of Stock</h3>
            <div class="value">
              <%= products.filter(p => p.quantity === 0).length %>
            </div>
          </div>
          <div class="stat-card">
            <h3>Total Value</h3>
            <div class="value">
              $<%= products.reduce((sum, p) => sum + (parseFloat(p.price) *
              p.quantity), 0).toFixed(2) %>
            </div>
          </div>
        </div>

        <% if (products.length === 0) { %>
        <div class="empty-state">
          <h3>No Products Yet</h3>
          <p>Start adding products to your inventory</p>
          <a
            href="/seller/products/add"
            class="btn btn-primary"
            style="display: inline-block; margin-top: 20px"
            >Add Your First Product</a
          >
        </div>
        <% } else { %>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Stock Status</th>
              <th>Total Value</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(p => { const qty = parseInt(p.quantity); const
            price = parseFloat(p.price); const totalValue = qty * price; let
            stockClass = 'stock-good'; let stockText = 'In Stock'; if (qty ===
            0) { stockClass = 'stock-out'; stockText = 'Out of Stock'; } else if
            (qty < 10) { stockClass = 'stock-low'; stockText = 'Low Stock'; } %>
            <tr>
              <td>#<%= p.id %></td>
              <td class="product-name"><%= p.name %></td>
              <td class="price">$<%= price.toFixed(2) %></td>
              <td><%= qty %> units</td>
              <td>
                <span class="stock <%= stockClass %>"><%= stockText %></span>
              </td>
              <td class="price">$<%= totalValue.toFixed(2) %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
