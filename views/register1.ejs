<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link href="/css/auth.css" rel="stylesheet">
    <style>
   
    </style>
  </head>
  <body>
    <div class="register-container">
      <div class="icon-wrapper">
        <div class="icon">✨</div>
      </div>

      <h2>Register</h2>

      <form id="registerForm" method="POST" action="/register" novalidate>
        <div class="form-group">
          <input id="name" name="name" type="text" placeholder="Enter your full name">
          <div class="error" id="nameError">Please enter your full name (at least 2 characters).</div>
        </div>

        <div class="form-group">
          <input id="email" name="email" type="text" placeholder="Enter your email">
          <div class="error" id="emailError">Please enter a valid email address.</div>
        </div>

        <div class="form-group">
          <div class="password-wrapper">
            <input id="password" name="password" type="password" placeholder="Create a password">
            <button class="toggle-password" id="togglePassword" type="button">
              👁️
            </button>
          </div>
          <div class="error" id="passwordError">
            Password must be at least 8 characters, include 1 uppercase, 1 lowercase, and 1 number.
          </div>
        </div>

        <div class="form-group">
          <div class="password-wrapper">
            <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm your password">
            <button class="toggle-password" id="toggleConfirmPassword" type="button">
              👁️
            </button>
          </div>
          <div class="error" id="confirmPasswordError">
            Passwords do not match.
          </div>
        </div>

        <!-- Hidden field to automatically set role as customer -->
        <input name="role" type="hidden" value="customer">

        <button class="register-btn" type="submit">Create Account</button>
      </form>

      <div class="login-link">
        Already have an account? <a href="/login">Login here</a>
      </div>
    </div>

    <script src="/js/auth.js"></script>
    
  </body>
</html>