<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Add Product</title>
  <link rel="stylesheet" href="/css/admnAdd.css">

</head>
<body>

  <!-- Top Bar -->
  <header class="header">
    <div class="header-content">
      <div class="logo">We Shop Admin</div>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
  </header>

  <div class="container">
    
    <!-- Sidebar -->
    <aside class="sidebar">
      <nav>
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/admin/products" class="active">Products</a>
        <a href="/admin/orders">Orders</a>
        <a href="/admin/users">Users</a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="main-content">

      <!-- Page Header -->
      <div class="page-header">
        <h2 class="page-title">Add Product</h2>
        <a href="/admin/products" class="back-link">
          ‚Üê Back to Products
        </a>
      </div>

      <!-- Form Container -->
      <div class="form-container">
        <h3 class="form-title">Product Information</h3>
        
        <form method="POST" action="/admin/products/admin_add_product">
          
          <div class="form-group">
            <label for="name">
              Product Name <span class="required">*</span>
            </label>
            <input 
              type="text" 
              id="name"
              name="name" 
              placeholder="Enter product name" 
              required 
            />
          </div>

          <div class="form-group">
            <label for="price">
              Price <span class="required">*</span>
            </label>
            <input
              type="number"
              id="price"
              step="0.01"
              name="price"
              placeholder="0.00"
              required
            />
          </div>

          <div class="form-group">
            <label for="quantity">
              Quantity <span class="required">*</span>
            </label>
            <input 
              type="number" 
              id="quantity"
              name="quantity" 
              placeholder="Enter quantity" 
              required 
            />
          </div>

          <div class="form-group">
            <label for="seller">
              Seller <span class="required">*</span>
            </label>
            <select id="seller" name="seller_id" required>
              <option value="">Select a seller</option>
              <% users.forEach(user => { %>
                <% if (user.role === 'seller') { %>
                  <option value="<%= user.id %>"><%= user.email %></option>
                <% } %>
              <% }) %>
            </select>
          </div>

          <div class="form-actions">
            <a href="/admin/products" class="cancel-btn">Cancel</a>
            <button type="submit">Add Product</button>
          </div>

        </form>
      </div>

    </main>
  </div>

</body>
</html>