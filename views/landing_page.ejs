        margin: 0 auto;
        text-align: center;
      }

      .footer-content a {
        color: white;
        text-decoration: none;
        margin: 0 0.5rem;
      }

      .footer-content a:hover {
        text-decoration: underline;
      }

      .social-icons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 1rem;
      }

      .social-icon {
        font-size: 1.5rem;
        cursor: pointer;
        transition: transform 0.3s;
      }

      .social-icon:hover {
        transform: scale(1.2);
      }

      .empty-message {
        text-align: center;
        padding: 3rem;
        color: #718096;
        font-size: 1.2rem;
      }

      @media (max-width: 768px) {
        header {
          flex-direction: column;
          gap: 1rem;
        }

        nav ul {
          gap: 1rem;
        }

        .hero h1 {
